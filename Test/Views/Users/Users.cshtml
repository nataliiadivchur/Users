@model IEnumerable<Test.Models.User>
@{
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Users</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>

<input type="text" id="searchInput" onkeyup="doSearch()" placeholder="Search" title="Type in ...">
<br>

<table class="table" id="UsersTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Married)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @{
                    var dateOfBirth = item.DateOfBirth.ToShortDateString();
                }
                @Html.DisplayFor(modelItem => dateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Married)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">
                    <input type="submit" value="Edit" class="btn btn-dark" />
                </a> 
                <a asp-action="Delete" asp-route-id="@item.ID">
                <input type="submit" value="Delete" class="btn btn-danger" />
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
<script src="~/js/user.js" asp-append-version="true"></script>
